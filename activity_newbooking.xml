<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dhruvcopy"
    tools:context=".newbooking"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">


    <Button
        android:id="@+id/bhavnagar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Bhavnagar"
        android:layout_marginEnd="30dp"/>
    <Button
            android:id="@+id/Surat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Surat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Ahmedabad"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ahmedabad"
            android:layout_marginEnd="30dp"/>
        <Button
            android:id="@+id/Rajkot"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Rajkot" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Vadodara"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30sp"
            android:text="Vadodara" />

        <Button
            android:id="@+id/Anand"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Anand" />
    </LinearLayout>

</LinearLayout>