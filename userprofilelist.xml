<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    android:elevation="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/usernameretrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/useremailretrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameretrive"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/userphonenoretrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/useremailretrive"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/passworduserretrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userphonenoretrive"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/genderuserretrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passworduserretrive"
            android:layout_marginTop="15dp" />


        <Button
            android:id="@+id/updateprofileseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderuserretrive"
            android:text="Update Profile"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>